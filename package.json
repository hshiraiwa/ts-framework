{
  "name": "ts-framework",
  "version": "2.8.0",
  "description": "A minimalistic web framework for TS",
  "author": "Luis Brito <luis@nxtep.io>",
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/bin.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "{lib,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf ./dist",
    "postbuild": "./scripts/chmod.sh",
    "test": "jest --config jest.json",
    "lint": "tslint --config tslint.json --project .",
    "docs": "./scripts/docs.sh",
    "predocs": "rimraf ./docs",
    "release": "yarn run -s build && yarn run -s docs",
    "console": "node --require ts-node/register --experimental-repl-await lib/repl",
    "coveralls": "((cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js) || true)"
  },
  "dependencies": {
    "@sentry/node": "^5.2.0",
    "body-parser": "^1.18.2",
    "clean-stack": "^1.3.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-oauth-server": "^2.0.0",
    "express-useragent": "^1.0.8",
    "fclone": "^1.0.11",
    "fs-extra": "^7.0.1",
    "hat": "^0.0.3",
    "helmet": "^3.13.0",
    "method-override": "^2.3.10",
    "multer": "^1.3.0",
    "nano-errors": "nxtep-io/nano-errors",
    "pjson": "^1.0.9",
    "request-ip": "^2.0.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-framework-common": "nxtep-io/ts-framework-common#2.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "upath": "^1.1.0",
    "url-join": "^4.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "@types/helmet": "^0.0.38",
    "@types/jest": "^26.0.20",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.116",
    "@types/method-override": "^0.0.31",
    "@types/multer": "^1.3.7",
    "@types/rimraf": "^2.0.2",
    "@types/supertest": "^2.0.3",
    "@types/url-join": "^0.8.2",
    "husky": "^1.0.0-rc.13",
    "jest": "^26.6.3",
    "lint-staged": "^7.2.0",
    "nxtep-typedoc-theme": "nxtep-io/nxtep-typedoc-theme",
    "prettier": "^1.14.0",
    "supertest": "^3.0.0",
    "ts-jest": "^26.5.3",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-no-circular-imports": "^0.5.0",
    "typedoc": "^0.13.0"
  }
}
